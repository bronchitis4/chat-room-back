generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  passwordHash String
  login        String?
  refreshToken RefreshToken?
  rooms Room[]
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  isActive  Boolean
  createdAt DateTime @default(now())
  expiresAt DateTime
  tokenHash String
  user      User     @relation(fields: [userId], references: [id])
}

model Room {
  id String @id @default(cuid())
  name String
  passwordHash String?
  maxPlayers Int @default(10)
  isActive Boolean @default(true)
  userId Int
  createdAt DateTime @default(now())
  user User? @relation(fields: [userId], references: [id])
}